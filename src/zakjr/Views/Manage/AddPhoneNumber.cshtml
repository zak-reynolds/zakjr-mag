@model AddPhoneNumberViewModel
@{
    ViewData["Title"] = "Add Phone Number";
    Layout = "_AdminLayout";
}

<form asp-controller="Manage" asp-action="AddPhoneNumber" method="post" class="form-horizontal">
    <h4>Add a phone number.</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="medium-2 column control-label"></label>
        <div class="medium-10 column">
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="medium-offset-2 medium-10 column">
            <button type="submit" class="button success">Send verification code</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
