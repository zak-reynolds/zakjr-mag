@model zakjr.Models.VideoContentChunk

@{
    ViewData["Title"] = "Add Video Content Chunk";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@foreach (var error in ViewData.ModelState.Values.SelectMany(x => x.Errors))
{
    <div style="background:#fff;margin:0.5rem;padding:1rem;">
        <p class="error">@error.ErrorMessage</p>
    </div>
}

<form asp-action="AddVideoContentChunk">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="VideoUrl" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="VideoUrl" class="form-control" />
                <span asp-validation-for="VideoUrl" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="VideoIsWidescreen" />
                    <label asp-for="VideoIsWidescreen"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Sequence" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Sequence" class="form-control" />
                <span asp-validation-for="Sequence" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BlogPostID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="BlogPostID" class="form-control" />
                <span asp-validation-for="BlogPostID" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
